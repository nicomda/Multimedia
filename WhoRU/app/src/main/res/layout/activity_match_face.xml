<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="10">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_matchface_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent"
            android:scaleType="fitCenter"
            android:paddingTop="32dp"
            android:paddingBottom="72dp"
            android:src="@drawable/uja_logo_320" />
    <ImageView
        android:id="@+id/imageView_matchface_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back_256px" />
    <ImageView
        android:id="@+id/imageView_matchface_fav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/star_outline" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/imageView_matchface_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-90dp"
            android:elevation="5dp"
            android:padding="20dp"
            android:src="@drawable/nicomda_profile"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_matchface_header"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:paddingBottom="24dp">




            <TextView
                android:id="@+id/textView_matchname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Viral Android"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_matchface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>